<ul class="form">
	<%= form.input(:first_name, :input_html => { :class => 'text'}) %>
	<%= form.input(:last_name, :input_html => { :class => 'text'}) %>
	<%= clear(:li) %>
	<%= form.input(:email, :input_html => { :class => 'text'}) %>
	<%= clear(:li) %>
	<%= form.input(:password, :as => :password, :input_html => { :class => 'text'}) %>
	<%= form.input(:password_confirmation, :as => :password, :input_html => { :class => 'text'}) %>
	<%= clear(:li) %>
</ul>